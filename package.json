{
  "name": "leverage",
  "version": "0.1.3",
  "description": "Leverage is a thin wrapper around the `redis` client that integrates your lua scripts as methods AND supports reliable and fault tolerant Pub/Sub on top of redis.",
  "main": "index.js",
  "scripts": {
    "test-travis": "istanbul cover node_modules/.bin/_mocha --report lcovonly -- test/*.test.js",
    "coverage": "istanbul cover ./node_modules/.bin/_mocha -- test/*.test.js",
    "test": "mocha $(find test -name '*.test.js')"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/observing/leverage.git"
  },
  "keywords": [
    "redis",
    "pub",
    "sub",
    "pub/sub",
    "message",
    "queues",
    "lua",
    "scripting",
    "leverage"
  ],
  "author": "Arnout Kazemier <opensource@observe.it>",
  "license": "MIT",
  "devDependencies": {
    "chai": "~3.5.0",
    "istanbul": "~0.4.5",
    "mocha": "~3.1.2",
    "pre-commit": "~1.1.3",
    "redis": "~2.6.3"
  },
  "dependencies": {
    "diagnostics": "~1.0.1",
    "eventemitter3": "~2.0.2",
    "fusing": "1.0.x",
    "underverse": "0.1.x"
  }
}
